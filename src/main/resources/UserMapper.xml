<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
<!--namespace 名称空间：于id组成sql唯一标识
    resultType:表明返回值类型
-->

    <select id="findAll" resultType="com.mypro.pojo.User">
    select * from user
    </select>
    <!--添加用户-->
    <insert id="saveUser" parameterType="com.mypro.pojo.User">
        insert into  user values (#{id},#{Name},#{Psw})
    </insert>
    <!--修改-->
    <update id="updateUser" parameterType="com.mypro.pojo.User">
        update  user set  name=#{name},psw =#{psw} where id=#{id};
    </update>
    <!--删除-->
    <delete id="deleteUser" parameterType="java.lang.Long">
        delete from user where id=#{id};
    </delete>

</mapper>